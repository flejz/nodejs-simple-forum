extends layout

block content

  - if (passwordMismatch) {
    .alert.alert-danger
      strong Password do not match!
  - }
  
  form(action="/register",method="post")
  
    .form-group  
      label Name:
      input.form-control(type='text', placeholder='Name', name="name", required)
    .form-group  
      label Username:
      input.form-control(type='text', placeholder='Username', name="username", required)
    .form-group
      label Password:
      input.form-control(type='password', placeholder='Password', name="password", required)
    .form-group
      label Password Confirmation:
      input.form-control(type='password', placeholder='Password Confirmation', name="passwordMatch", required)
    .form-group
      label Admin:
      input.form-control(type='checkbox', name="isAdm")
      
    button.btn.btn-primary(type='submit') Register
